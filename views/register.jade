extends layout

block content
    .container
        
        .page-header
            h1 Authentication App
        
        .row
            form.col-md-4.col-md-offset-4.input-group-lg(action='/register', method='post')
                h3 Register new user
                if message && message.length
                    div.alert.alert-info(role='alert') #{message}
                label.sr-only(for='inputUsername') User Name
                input#inputUsername.form-control(type='text', name='username' placeholder='Username', required='', autofocus='')
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password', name='password' placeholder='Password', required='')
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Register

        h4.text-center Have an account? 
            a(href='/') Sign In
