extends layout

block content
    .container
        
        .page-header
            h1 Authentication App
        
        .row
            form.col-md-4.col-md-offset-4.input-group-lg(action='/', method='post')
                h3 Log into your account
                if message && message.length
                    div.alert.alert-danger(role='alert') #{message}
                label.sr-only(for='inputUsername') User Name
                input#inputUsername.form-control(type='text', name='username' placeholder='Username', required='', autofocus='')
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password', name='password' placeholder='Password', required='')
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

        h4.text-center Don't Have an account? 
            a(href='/register') Register Here
